<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tourImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nature" />

            <TextView
                android:id="@+id/tourNumberViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1308"
                android:textAlignment="center"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tourNameTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="Экологическая поездка на Кольсай"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"

                    android:src="@drawable/ic_settings_black_24dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/tourOperatorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Оператор: Кольсай Туры"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tourCategoryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Категория: Туризм"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tourLocationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Локация: Кольсай"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tourDateAddedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Дата добавления: 02.05.2016"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tourPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tourNameTextView"
                android:layout_marginBottom="5dp"
                android:text="Цена: 50000 тг"
                android:textAlignment="center"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>