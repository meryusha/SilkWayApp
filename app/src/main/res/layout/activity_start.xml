<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/fab_margin"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="silkway.merey.silkwayapp.StartActivity">

    <TextView
        style="@style/headingsTextStyle"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:text="Войти как"
        android:textAlignment="center" />

    <Button
        android:id="@+id/enterAsTourAgenButton"
        style="@style/acceptRejectButton"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:background="@color/orange"
        android:text="Турагент" />

    <Button
        android:id="@+id/enterAsOperatorButton"
        style="@style/acceptRejectButton"
        android:layout_width="match_parent"
        android:background="@color/blue"
        android:text="Туроператор" />
</LinearLayout>
