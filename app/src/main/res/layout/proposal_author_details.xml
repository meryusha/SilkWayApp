<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/proposalAuthorImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/nature" />

        <TextView
            android:id="@+id/proposalAuthorName"
            style="@style/textStyle"

            android:text="Explore Asia"
            android:textAlignment="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/proposalAuthorDescription"
        style="@style/textStyle"
        android:maxLines="7"
        android:nestedScrollingEnabled="true"
        android:scrollbars="vertical"
        android:text="is the Cambodia-based Tour Operator and Travel Company. Since inception in 2006 with our 15 years of experience" />
</LinearLayout>
